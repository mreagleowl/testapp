# app.kv
# v0.4.9
ScreenManager:
    ThemeSelectionScreen:
        name: 'themes'
    FioInputScreen:
        name: 'fio'
    TestScreen:
        name: 'test'
    ResultScreen:
        name: 'result'
    AdminPinScreen:
        name: 'pin'
    AdminScreen:
        name: 'admin'

<ThemeSelectionScreen>:
    canvas.before:
        Color:
            rgba: app.BG_COLOR
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        padding: 30
        spacing: 20
        Label:
            text: "Оберіть тему тесту:"
            font_size: '22sp'
            color: app.BUTTON_TEXT
        RecycleView:
            id: rv
            viewclass: 'HoverButton'
            data: root.rv_data
            RecycleBoxLayout:
                default_size: None, 56
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.1
            spacing: 20
            Button:
                text: "Адміністрування"
                size_hint_y: None
                height: 44
                on_release: root.manager.current = "pin"
                background_color: app.BUTTON_BG
                color: app.BUTTON_TEXT
            Button:
                text: "Вийти"
                size_hint_y: None
                height: 44
                on_release: app.stop()
                background_color: app.BUTTON_BG
                color: app.BUTTON_TEXT

<FioInputScreen>:
    canvas.before:
        Color:
            rgba: app.BG_COLOR
        Rectangle:
            pos: self.pos
            size: self.size
    selected_theme: ''
    BoxLayout:
        orientation: 'vertical'
        padding: 30
        spacing: 20
        Label:
            text: "Введіть ПІБ"
            font_size: '20sp'
            color: app.BUTTON_TEXT
        TextInput:
            id: fio_input
            size_hint: None, None
            size: 360, 44
            font_size: '18sp'
            multiline: False
            max_length: 50
            pos_hint: {'center_x': 0.5}
        Label:
            id: error
            text: ''
            color: 1,0,0,1
            font_size: '16sp'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 44
            spacing: 20
            Button:
                text: "Назад"
                on_release: root.go_back()
                background_color: app.BUTTON_BG
                color: app.BUTTON_TEXT
            Button:
                text: "Далі"
                on_release: root.start_test()
                background_color: app.BUTTON_BG
                color: app.BUTTON_TEXT

<TestScreen>:
    canvas.before:
        Color:
            rgba: app.BG_COLOR
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        padding: 30
        spacing: 10
        Label:
            id: question
            text: ""
            font_size: '22sp'
            size_hint_y: None
            height: 56
            color: app.BUTTON_TEXT
        BoxLayout:
            id: answers_box
            orientation: 'vertical'
            spacing: 10
            size_hint_y: 0.6
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 44
            spacing: 20
            Button:
                text: "Назад"
                on_release: root.prev()
                background_color: app.BUTTON_BG
                color: app.BUTTON_TEXT
            Button:
                text: "Далі"
                on_release: root.next()
                background_color: app.BUTTON_BG
                color: app.BUTTON_TEXT
        Button:
            text: "Завершити"
            size_hint_y: None
            height: 44
            on_release: root.finish()
            background_color: app.BUTTON_BG
            color: app.BUTTON_TEXT
        ProgressBar:
            id: progress
            max: 100
            value: 0
            size_hint_y: None
            height: 14

<ResultScreen>:
    canvas.before:
        Color:
            rgba: app.BG_COLOR
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        padding: 30
        spacing: 30
        Label:
            id: score_label
            text: ""
            font_size: '24sp'
            color: app.BUTTON_TEXT
        Button:
            text: "До вибору тем"
            size_hint_y: None
            height: 44
            on_release: root.to_main()
            background_color: app.BUTTON_BG
            color: app.BUTTON_TEXT

<AdminPinScreen>:
    canvas.before:
        Color:
            rgba: app.BG_COLOR
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        padding: 30
        spacing: 20
        Label:
            text: "Введіть PIN:"
            font_size: '20sp'
            color: app.BUTTON_TEXT
        TextInput:
            id: pin_input
            password: True
            font_size: '22sp'
            multiline: False
            size_hint: None, None
            size: 220, 44
            max_length: 16
            halign: 'center'
            pos_hint: {'center_x':0.5}
        Label:
            id: error_label
            text: ""
            color: 1,0,0,1
            font_size: '15sp'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 44
            spacing: 20
            Button:
                text: "Вхід"
                on_release: root.check_pin()
                background_color: app.BUTTON_BG
                color: app.BUTTON_TEXT
            Button:
                text: "Назад"
                on_release: root.go_back()
                background_color: app.BUTTON_BG
                color: app.BUTTON_TEXT

<AdminScreen>:
    canvas.before:
        Color:
            rgba: app.BG_COLOR
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        padding: 30
        spacing: 20
        Label:
            text: "Адмін панель (звітність, інше)"
            color: app.BUTTON_TEXT
        Button:
            text: "Назад"
            on_release: root.manager.current = "themes"
            background_color: app.BUTTON_BG
            color: app.BUTTON_TEXT
